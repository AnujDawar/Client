<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anujdawar.client.AddCommandIntentClass"
    android:textAlignment="center"
    android:background="#f4ffff"
    android:padding="20dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/customCommandTyped"
        tools:alpha="0.5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter Custom Command"
        android:textAlignment="center" />

    <TextView
        android:text="OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="24sp"
        android:alpha="1"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/customCommandTyped"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_mic_black_36dp"
        android:id="@+id/micButtonIDcommandinput"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:padding="2dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/spinner1"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_width="100dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:padding="2dp"
        android:layout_below="@+id/spinner2"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_width="100dp" />

    <Spinner
        android:id="@+id/spinner4"
        android:padding="2dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/spinner3"
        android:layout_alignLeft="@+id/spinner5"
        android:layout_alignStart="@+id/spinner5"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_width="100dp" />

    <Spinner
        android:id="@+id/spinner5"
        android:padding="2dp"
        android:layout_below="@+id/spinner4"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_width="100dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_marginTop="46dp"
        android:padding="2dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/micButtonIDcommandinput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_width="100dp" />

    <TextView
        android:text="Device 2"
        android:id="@+id/addCommandDevice2"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_height="30dp"
        android:layout_below="@+id/addCommandDevice1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Device 3"
        android:id="@+id/addCommandDevice3"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_height="30dp"
        android:layout_below="@+id/addCommandDevice2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Device 4"
        android:id="@+id/addCommandDevice4"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_height="30dp"
        android:layout_below="@+id/addCommandDevice3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Device 5"
        android:id="@+id/addCommandDevice5"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_height="30dp"
        android:layout_below="@+id/addCommandDevice4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Device 1"
        android:id="@+id/addCommandDevice1"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/spinner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
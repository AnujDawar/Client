<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anujdawar.client.DevicesActivity"
    android:textAlignment="center"
    android:background="#f4ffff"
    android:padding="20dp">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE 1   "
        android:id="@+id/switch1"
        android:layout_marginTop="48dp"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textAlignment="center"
        android:nestedScrollingEnabled="true"
        android:padding="10dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE 2   "
        android:id="@+id/switch2"
        android:checked="false"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:textSize="15dp"
        android:textAlignment="center"
        android:nestedScrollingEnabled="true"
        android:padding="10dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE 3   "
        android:id="@+id/switch3"
        android:checked="false"
        android:layout_below="@+id/switch2"
        android:layout_alignLeft="@+id/switch2"
        android:layout_alignStart="@+id/switch2"
        android:layout_marginTop="42dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:nestedScrollingEnabled="true"
        android:padding="10dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE 4   "
        android:id="@+id/switch4"
        android:layout_below="@+id/switch3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:checked="false"
        android:textSize="15dp"
        android:textAlignment="center"
        android:nestedScrollingEnabled="true"
        android:padding="10dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE 5   "
        android:id="@+id/switch5"
        android:layout_below="@+id/switch4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:checked="false"
        android:textSize="15dp"
        android:textAlignment="center"
        android:nestedScrollingEnabled="true"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/myResult"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#6a6cf6" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar1"
        android:layout_alignTop="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:max="4"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_alignTop="@+id/switch2"
        android:layout_alignLeft="@+id/seekBar1"
        android:layout_alignStart="@+id/seekBar1"
        android:indeterminate="false"
        android:max="4"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_alignTop="@+id/switch3"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignStart="@+id/seekBar2"
        android:max="4"
        android:indeterminate="false"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar4"
        android:layout_alignTop="@+id/switch4"
        android:layout_alignLeft="@+id/seekBar3"
        android:layout_alignStart="@+id/seekBar3"
        android:max="4"
        android:indeterminate="false"
        android:textAlignment="center"
        android:padding="10dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:layout_alignTop="@+id/switch5"
        android:layout_alignLeft="@+id/seekBar4"
        android:layout_alignStart="@+id/seekBar4"
        android:max="4"
        android:indeterminate="false"
        android:textAlignment="center"
        android:padding="10dp"
        android:nestedScrollingEnabled="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Device 1"
        android:id="@+id/seekName1"
        android:textAlignment="center"
        android:layout_alignTop="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:textSize="20dp"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Device 2"
        android:id="@+id/seekName2"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/switch2"
        android:layout_alignLeft="@+id/seekName1"
        android:layout_alignStart="@+id/seekName1"
        android:textAlignment="center"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Device 3"
        android:id="@+id/seekName3"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/switch3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Device 4"
        android:id="@+id/seekName4"
        android:textSize="20dp"
        android:layout_alignTop="@+id/switch4"
        android:layout_alignLeft="@+id/seekName3"
        android:layout_alignStart="@+id/seekName3"
        android:textAlignment="center"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Device 5"
        android:id="@+id/seekName5"
        android:textSize="20dp"
        android:layout_alignTop="@+id/switch5"
        android:layout_alignLeft="@+id/seekName4"
        android:layout_alignStart="@+id/seekName4"
        android:textAlignment="center"
        android:padding="10dp" />

</RelativeLayout>
